<div class="cartContent" id="cartContent" data-cartCartItems="{{ cart.cartItems|length }}" data-cartTakeoverTypeSlug="{{ cart.takeOverType.slug }}">
    {% if cart.cartItems|length > 0 %}
        {{ include('@App/Commission/@list.twig', {'cart' : cart, 'editable' : true}) }}
        {% if not isCheckout %}
            <div class="row row-no-margin">
                <div class="col-12 buttons-container">
                    <p>Přihlaste se a získáte výhody</p>
                    <a class="signin cart-button" href="#">Přihlásit se</a>
                    <a class="place-order cart-button" href="{{ path('app.checkout.step1') }}">OBJEDNAT</a>
                </div>
            </div>
        {% endif %}
    {% else %}
        <p class="text-center">Váš košík je prázdný, vyberte si něco z naší nabídky.</p>
    {% endif %}
</div>